<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.jiangtao.lifetime.RetrievePasswordActivity"
    android:gravity="center"
    android:id="@+id/container_retieve_password">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/activity_retrieve_input_email"
        android:id="@+id/activity_retrieve_password_editText" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/activity_retrieve_send_email"
        android:layout_below="@+id/activity_retrieve_password_editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/activity_retrieve_password_btn"/>

</RelativeLayout>
