<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:background="@drawable/personback"
        android:weightSum="1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.39"
            android:src="@drawable/welcome"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/tv_fragment_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="150dp"
            android:clickable="true"
            android:onClick="personalOnClick"
            android:text="@string/personal_login_tv_text"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.25"
        android:orientation="vertical">

        <TextView
            android:id="@+id/personal_tv_message"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/tvonclickstyle_selector"
            android:clickable="true"
            android:drawableLeft="@drawable/mymessage"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:onClick="personalOnClick"
            android:paddingLeft="20dp"
            android:text="@string/personal_tv_mymessage" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B8B8B8" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/tvonclickstyle_selector"
            android:clickable="true"
            android:drawableLeft="@drawable/recommend"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:onClick="personalOnClick"
            android:paddingLeft="20dp"
            android:text="@string/personal_login_tv_recommend" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B8B8B8" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/tvonclickstyle_selector"
            android:clickable="true"
            android:drawableLeft="@drawable/note"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:onClick="personalOnClick"
            android:paddingLeft="20dp"
            android:text="@string/personal_login_tv_note" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B8B8B8" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/tvonclickstyle_selector"
            android:clickable="true"
            android:drawableLeft="@drawable/friend"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:onClick="personalOnClick"
            android:paddingLeft="20dp"
            android:text="@string/personal_login_tv_friend" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B8B8B8" />

        <Button
            android:id="@+id/btn_cancel_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/personal_login_btn_shpe"
            android:onClick="personalOnClick"
            android:text="@string/btn_cancel_login" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B8B8B8" />
    </LinearLayout>
</LinearLayout>
