<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/noteback"
    tools:context="org.jiangtao.lifetime.WriteNoteActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_fragment_tablayout_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#ff00ddff"
        app:tabTextColor="#ffffffff"
        app:tabSelectedTextColor="#ff000000" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_fragment_viewpager_writenote"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tablayout_fragment_tablayout_note"
        android:scrollbarAlwaysDrawHorizontalTrack="true" />

</RelativeLayout>
