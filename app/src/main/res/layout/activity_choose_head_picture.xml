<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.jiangtao.lifetime.ChooseHeadPictureActivity">

    <org.jiangtao.utils.ZoomImageView
        android:id="@+id/ziv_activity_choose_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        />

    <org.jiangtao.utils.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btn_activity_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:gravity="center"
        android:onClick="okOnClick"
        android:text="@string/activity_choose_picture" />

</FrameLayout>
