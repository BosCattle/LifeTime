<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEBEE"
    tools:context="org.jiangtao.lifetime.RegisterActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/registertitleback" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:editable="false"
                android:text="@string/regest_tv_text_title"
                android:textSize="12pt" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B8B8B8" />

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/activity_register_et_username"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:drawableLeft="@drawable/username"
                    android:hint="@string/regest_et_hint_username"
                    android:textSize="12pt" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#B8B8B8" />

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/activty_register_tv_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:drawableLeft="@drawable/password"
                    android:hint="@string/regest_et_hint_password"
                    android:inputType="textPassword"
                    android:textSize="10pt" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#B8B8B8" />

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/activity_register_tv_repassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:drawableLeft="@drawable/password"
                    android:hint="@string/regest_et_hint_repassword"
                    android:inputType="textPassword"
                    android:textSize="10pt" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#B8B8B8" />

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/activity_register_tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:drawableLeft="@drawable/registeremil"
                    android:hint="@string/regest_et_hint_email"
                    android:inputType="textEmailAddress"
                    android:textSize="10pt" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#B8B8B8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/activity_register_email_check"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:hint="@string/regest_et_hint_checkemail"
                        android:inputType="numberSigned"
                        android:textSize="10pt" />
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>


                <Button
                    android:id="@+id/activity_register_btn_sentcheckemil"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/sendnow"
                    android:background="@drawable/regest_shape"
                    android:onClick="registerOnClick"
                    android:text="@string/regest_btn_sent_checkemail" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_activity_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/regest_shape"
                android:onClick="registerOnClick"
                android:text="@string/regest_btn_regest" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12pt"
                android:layout_marginTop="10dp"
                android:text="@string/regest_tv_prompt"/>
        </LinearLayout>
        </LinearLayout>



</ScrollView>
