<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.jiangtao.lifetime" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="org.jiangtao.application.LifeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".IndexActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/title_activity_welcome" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GuideActivity"
            android:label="@string/title_activity_guide" >
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_regest" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".ChooseHeadPictureActivity"
            android:label="@string/title_activity_choose_head_picture" >
        </activity>
        <activity
            android:name=".DynamicActivity"
            android:label="@string/title_activity_my_dynamic" >
        </activity>
        <activity
            android:name=".CollectionActivity"
            android:label="@string/title_activity_my_collection" >
        </activity>
        <activity
            android:name=".RetrievePasswordActivity"
            android:label="@string/title_activity_retrieve_password" >
        </activity>
    </application>

</manifest>
